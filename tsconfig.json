{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES6",        
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": false,
        "noLib": false,
        "declaration": true,
        "lib": ["es5", "es6", "es2017", "scripthost", "dom" ],
        "outDir": "dist" //remove this setting to build & run tests from Visual Studio
    },
    "include": [
        "sdk/**/*",
        "test/**/*"
    ]
}
